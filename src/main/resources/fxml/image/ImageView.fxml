<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<!--
    Base container for the image converter section.
    This layout serves as a dynamic content holder for image format subviews
    like PNG ⇄ JPG, WebP, TIFF, etc.
-->
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@/css/styles.css">

    <!-- Placeholder area where subviews (PNG ⇄ JPG, WebP, etc.) will be injected -->
    <StackPane fx:id="imageContentArea"
               AnchorPane.topAnchor="0"
               AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"/>
</AnchorPane>
